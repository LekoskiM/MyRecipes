@model List<MyRecipes.Models.Recipe>;

<!DOCTYPE html>
<html>
<head>
    <title>
        My Recipes
    </title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/css/app.css" rel="stylesheet" />
</head>
<body>
    @*<h1>Hello from our MVC</h1>
        <p>The time right now is: @ViewBag.CurrentDate in Macedonia</p>
        <p>The sum of @ViewBag.FirstNumber and @ViewBag.SecondNumber is @ViewData["sum"]</p>*@
    <div class="container" style="margin-top:20px">
        <div class="row">
            @foreach (var recipe in @Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <img src="@recipe.ImageUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text">@recipe.Description</p>
                            <a href="#" class="btn btn-primary">See more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>