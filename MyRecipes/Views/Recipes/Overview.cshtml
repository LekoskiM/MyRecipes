@model List<MyRecipes.Models.Recipe>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<div class="row">
    <form asp-controller="Recipes" asp-action="Overview">
        <div class="form-group">
            <input name="Title" value="" id="title" class="form-control" placeholder="Search" />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

<div class="row">
    @foreach (var recipe in @Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@recipe.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@recipe.Title</h5>
                    <p class="card-text">@recipe.Description</p>
                    <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-primary"> See more </a>
                </div>
            </div>
        </div>
    }
</div>
