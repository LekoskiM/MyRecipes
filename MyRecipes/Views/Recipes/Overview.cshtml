@model List<MyRecipes.Models.Recipe>;

@{ 
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<div class="row">
    @foreach (var recipe in @Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@recipe.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@recipe.Title</h5>
                    <p class="card-text">@recipe.Description</p>
                    <a href="/Recipes/Details/@recipe.Id" class="btn btn-primary">See more</a>
                </div>
            </div>
        </div>
    }
</div>
